{
  "languageserver": {
		"golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
	"list": {
		"insertMappings": {
			"<Tab>": "feedkeys:\\<Down>"
		},
		"source": {
			"files": {
				"excludePatterns": ["node_modules/*", ".git/*", "data/*", "/tmp/*"]
			},
			"grep": {
				"excludePatterns": ["node_modules/*", ".git/*", "data/*", "/tmp/*"]
			}
		}
	}
}
